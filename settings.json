{
  // ####################################################
  // SECURITY/PRIVACY ###################################
  // ####################################################
  "assistant": {
    "button": false,
    "default_model": {
      "provider": "ollama",
      "model": "llama3.1:latest"
    },
    "dock": "bottom",
    "enabled": true,
    "version": "2"
  },
  "auto_install_extensions": {
    "html": true
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // ####################################################
  // GUI ################################################
  // ####################################################
  "buffer_font_size": 16,
  "base_keymap": "VSCode",
  "buffer_font_family": "Zed Plex Mono",
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "chat_panel": {
    "button": false,
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right"
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "format_on_save": "on",
  "inlay_hints": {
    "enabled": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "notification_panel": {
    "button": false,
    "dock": "right"
  },
  "preferred_line_length": 72,
  "project_panel": {
    "button": false,
    "default_width": 440,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "always"
    }
  },
  "outline_panel": {
    "button": false,
    "dock": "right"
  },
  "preview_tabs": {
    "enabled": false
  },
  "prettier": {
    "allowed": true
  },
  "show_completions_on_input": true,
  "show_inline_completions": true,
  "show_whitespaces": "all",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "macOS Classic Dark2"
  },
  "scrollbar": {
    "show": "auto"
  },
  "tab_bar": {
    "show": true
  },
  "ui_font_size": 16,
  // ####################################################
  // TERMINAL ###########################################
  // ####################################################
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "off",
    "button": false,
    "copy_on_select": false,
    "detect_venv": "off",
    "dock": "bottom",
    "env": {
      "ZED": "1"
    },
    "font_family": "Hack Nerd Font Mono",
    "font_features": {
      "calt": false
    },
    "font_size": 14,
    "line_height": "comfortable",
    "option_as_meta": true,
    "shell": {
      "program": "/opt/local/bin/bash"
    },
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },
  // ####################################################
  // VIM ################################################
  // ####################################################
  "cursor_blink": false,
  "relative_line_numbers": true,
  "vim_mode": true,
  "vim": {
    "custom_digraphs": {
      "fz": "üßü‚Äç‚ôÄÔ∏è"
    },
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  // ####################################################
  // GIT ################################################
  // ####################################################
  "git": {
    "inline_blame": {
      "enabled": true,
      "min_column": 60
    }
  },
  // ####################################################
  // LANGUAGES ##########################################
  // ####################################################
  "languages": {
    "C": {
      "tab_size": 4
    },

    "C++": {
      "tab_size": 4
    },

    "CMake": {
      "tab_size": 4
    },

    "CSS": {
      "tab_size": 2,
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },

    "JSON": {
      "tab_size": 2,
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },

    "JSONC": {
      "tab_size": 2,
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },

    "JSX": {
      "tab_size": 2,
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },

    "JavaScript": {
      "tab_size": 2,
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        },
        "language_server": {
          "name": "biome"
        }
      }
    },

    "Make": {
      "tab_size": 4
    },

    "Markdown": {
      "remove_trailing_whitespace_on_save": true,
      "format_on_save": "prettier"
    },

    "Python": {
      "tab_size": 4,
      "language_servers": ["pyright"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },

    "SQL": {
      "tab_size": 2
    },

    "Rust": {
      "tab_size": 4,
      "language_servers": ["rust.analyzer"]
    },

    "Svelte": {
      "tab_size": 2,
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },

    "TypeScript": {
      "tab_size": 2,
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "prettier": {
        "allowed": false
      }
    },

    "TSX": {
      "tab_size": 2,
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },

    "Vue.js": {
      "tab_size": 2,
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    }
  },

  "yaml": {
    "completion": true,
    "format": {
      "enable": true,
      "singleQuote": false,
      "bracketSpacing": true
    },
    "hover": "enable",
    "schemaStore": {
      "enable": true,
      "url": "https://www.schemastore.org/api/json/catalog.json"
    },
    "validate": true
  },

  // ####################################################
  // LSP ################################################
  // ####################################################
  "lsp": {
    "biome": {
      "settings": {
        "config_path": "config/biome.json",
        "require_config_file": true
      }
    },

    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd",
        "args": []
      }
    },

    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    },

    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace"
          // "typeCheckingMode": "strict"
        },
        "python": {
          "pythonPath": "~/.pyenv/shims/python"
        }
      }
    },

    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 72,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },

    "rust.analyzer": {
      "initialization_options": {
        "rust": {
          "analyzerTargetDir": true
        }
      },
      "binary": {
        "path": "/Users/example/bin/rust-analyzer",
        "args": [],
        "path_lookup": true
      },
      "cargo": {
        "allTargets": false
      },
      "check": {
        "workspace": true // use `-p` instead of `--workspace` for cargo check
      },
      "checkOnSave": true, // `false` to disable checking entirely
      "diagnostics": {
        "experimental": {
          "enable": true
        }
      }
    },

    "svelte-language-server": {
      "initialization_options": {
        "configuration": {
          "typescript": {},
          "javascript": {}
        }
      }
    },

    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    },

    "terraform-ls": {
      "initialization_options": {
        "experimentalFeatures": {
          "prefillRequiredFields": true
        }
      }
    },

    "vtsls": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayVariableTypeHintsWhenTypeMatchesName": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        },
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 16184
          }
        },
        "javascript": {
          "tsserver": {
            "maxTsServerMemory": 16184
          }
        }
      }
    },

    "yaml-language-server": {
      "initialization_options": {
        "yaml": {
          "keyOrdering": false,
          "format": {
            "singleQuote": false
          },
          "schemaStore": {
            "enable": true
          },
          "schemas": {
            "http://json.schemastore.org/composer": ["/*"],
            "../relative/path/schema.json": ["/config*.yaml"]
          }
        }
      }
    }
  },

  // ####################################################
  // MISC ###############################################
  // ####################################################
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },

  "journal": {
    "path": "~/.config/zed",
    "hour_format": "hour24"
  }
}
